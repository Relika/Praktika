<Window x:Class="MicroServiceInstaller3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MicroServiceInstaller3"
        mc:Ignorable="d"
        Title="Service Installer" Height="800" Width="1000">
    <Grid>
        <TabControl x:Name="Tab">
            <TabItem Header="Upload" Selector.IsSelected="{Binding IsTabUploadSelected}" Width="100">
                <Grid x:Name="grid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="148*" />
                        <ColumnDefinition Width="591*"/>
                        <ColumnDefinition Width="247*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Background="GhostWhite" Grid.ColumnSpan="2" >
                        <Label x:Name="LbSelectedFolder" Content=""  Margin="5" Height="30" FontWeight="Bold" VerticalAlignment="Top"/>
                        <ListBox x:Name="ListFiles"   Grid.Row="0" Grid.Column="0"  Margin="3,3,3,3" Height="200">
                        </ListBox>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="2"  Background="GhostWhite">
                        <Button x:Name="BSelectFolder" Content="Select folder" FontSize="20" Width="200" Height="50" Margin="5,20,5,5" Click="BSelectFolder_Click"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                        <Label x:Name="LbappSettingsPath" Content="" Margin="5"  Height="30" FontWeight="Bold"  VerticalAlignment="Top"/>
                        <ListView x:Name="LvUploadedConfigSettings"   Grid.Row="1" Grid.Column="0"  Margin="3,3,3,3" Height="200">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock x:Name="Key" Text="{Binding Key}" FontWeight="Bold" Margin="10" Width="180"/>
                                        <TextBox x:Name="Value" Text="{Binding Value}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="2">
                        <Button x:Name="BnConfig" IsEnabled="False" Content="Config settings"  FontSize="20" Width="200" Height="50" Margin="5,20,5,5" Click="BnConfig_Click" />
                        <Button x:Name="BnSaveChanges" IsEnabled="False" Content="Save changes" FontSize="20" Width="200" Height="50" Margin="5,20,5,5"   Click="BnSaveChanges_Click"/>
                        <Label x:Name="LbProcessStatus"  Content="" Margin="5,20,5,5" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.Column="0" Background="GhostWhite" Grid.ColumnSpan="2" >
                        <ListBox x:Name="ListZipFiles" Margin="3,3,3,3" Height="80"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.Column="2" Background="GhostWhite" >
                        <Button x:Name="BnZip" IsEnabled="False" Content="Zip files"  FontSize="20" Width="200" Height="50" Margin="5,20,5,5" Click="BnZip_Click"/>
                    </StackPanel>

                    <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2">
                        <Label x:Name="LbStatus" Content="" Height="25"    FontWeight="Bold" VerticalAlignment="Top" Margin="5"/>
                    </StackPanel>

                    <StackPanel Grid.Row="3" Grid.Column="2">
                        <Button x:Name="BnFinishandZip" Content="Finish and Zip" FontSize="20" Width="200"  Height="50" Margin="5,20,5,5"  Click="BnFinishandZip_Click" IsEnabled="false" />
                    </StackPanel>

                    <Label x:Name="selectedPath" Grid.Column="2" HorizontalAlignment="Left" Margin="48,60,0,0" Grid.Row="1" VerticalAlignment="Top" Visibility="Hidden"/>
                </Grid>
            </TabItem>
            <TabItem Header="Download" Selector.IsSelected="{Binding IsTabDownloadSelected}"  Width="100">
                <Grid x:Name="downloadgrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.6*" />
                        <ColumnDefinition Width="0.2*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Background="GhostWhite" >
                        <Label x:Name="LbSelectedZipFile" Content=""  Margin="5" Height="30" FontWeight="Bold" VerticalAlignment="Top"/>
                        <ListBox x:Name="ListAppSettingsFiles"   Grid.Row="0" Grid.Column="0"  Margin="3,3,3,3" Height="200" SelectionChanged="ListAppSettingsFiles_SelectionChanged_1" SelectionMode="Single">
                        </ListBox>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="1"  Background="GhostWhite">
                        <Button x:Name="BSelectZipFile" Content="Select Zip file" FontSize="20" Width="200" Height="50" Margin="5,20,5,5" Click="BSelectZipFile_Click"/>
                        <ListView x:Name="ListUnPackedZipFiles" Height="100" Width="100" Visibility="Hidden">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Grid.Column="0">
                        <Label x:Name="LbDownloadedAppSettingsFilePath" Content="" Margin="5"  Height="30" FontWeight="Bold"  VerticalAlignment="Top"/>
                        <ListView x:Name="LvDownloadedConfigSettings"   Grid.Row="1" Grid.Column="0"  Margin="3,3,3,3" Height="200">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock x:Name="Key" Text="{Binding Key}" FontWeight="Bold" Margin="10" Width="180"/>
                                        <TextBox x:Name="Value" Text="{Binding Value}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="1">
                        <Button x:Name="BnConfigDownloadedAppSettings" IsEnabled="False" Content="Config settings"  FontSize="20" Width="200" Height="50" Margin="5,20,5,5" Click="BnConfigDownloadedAppSettings_Click"  />
                        <Button x:Name="BnSaveDownloadedAppSettingsChanges" IsEnabled="False" Content="Save changes" FontSize="20" Width="200" Height="50" Margin="5,20,5,5"    />
                        <Label x:Name="LbDownloadedProcessStatus"  Content="" Margin="5,20,5,5" HorizontalAlignment="Center"/>
                    </StackPanel>


                    <Label x:Name="LbTemporaryFolderZipFile" Grid.Column="1" HorizontalAlignment="Left" Margin="48,60,0,0" Grid.Row="1" VerticalAlignment="Top" Visibility="Hidden"/>
                    <Label x:Name="LbTemporary" HorizontalAlignment="Left" Margin="280,186,0,-220" Grid.Row="3" VerticalAlignment="Top" RenderTransformOrigin="0.2,7.9" Height="36" Width="800" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>

</Window>
