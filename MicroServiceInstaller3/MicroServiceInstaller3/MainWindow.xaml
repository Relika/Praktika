<Window x:Class="MicroServiceInstaller3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MicroServiceInstaller3"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000">
    <Grid x:Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.6*" />
            <ColumnDefinition Width="0.2*" />
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Row="0" Grid.Column="0" Background="GhostWhite" >
            <Label x:Name="LbSelectedFolder" Content=""  Margin="5" Height="30" FontWeight="Bold" VerticalAlignment="Top"/>
            <ListBox x:Name="ListFiles"   Grid.Row="0" Grid.Column="0"  Margin="3,3,3,3" Height="200">
            </ListBox>
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="1"  Background="GhostWhite">
            <Button x:Name="BSelectFolder" Content="Select folder" FontSize="20" Width="200" Height="50" Margin="5,20,5,5" Click="BSelectFolder_Click"/>

        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="0">
            <Label x:Name="LbAppSettingsFilePath" Content="" Margin="5"  Height="30" FontWeight="Bold"  VerticalAlignment="Top"/>
            <ListView x:Name="LvConfigSettings"   Grid.Row="1" Grid.Column="0"  Margin="3,3,3,3" Height="200">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="Key" Text="{Binding Key}" FontWeight="Bold" Margin="10" Width="180"/>
                            <TextBox x:Name="Value" Text="{Binding Value}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1">
            <Button x:Name="BnConfig" Content="Config settings"  FontSize="20" Width="200" Height="50" Margin="5,20,5,5" Click="BnConfig_Click" />
            <Button x:Name="BnSaveChanges" Content="Save changes" FontSize="20" Width="200" Height="50" Margin="5,20,5,5"   Click="BnSaveChanges_Click"/>
            <Label x:Name="LbProcessStatus"  Content="" Margin="5,20,5,5" HorizontalAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="0" Background="GhostWhite" >
            <ListBox x:Name="ListZipFiles" Margin="5" Height="80"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="1" Background="GhostWhite" >
            <Button x:Name="BnZip" Content="Zip files"  FontSize="20" Width="200" Height="50" Margin="5,20,5,5" Click="BnZip_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Grid.Column="0">
            <Label x:Name="LbStatus" Content="" Height="25" VerticalAlignment="Top" Margin="5"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Grid.Column="1">
            <Button x:Name="BnFinishandZip" Content="Finish and Zip" FontSize="20" Width="200"  Height="50" Margin="5,20,5,5"  Click="BnFinishandZip_Click" />
        </StackPanel>

        <Label x:Name="LbTemporaryFolder" Grid.Column="1" HorizontalAlignment="Left" Margin="48,60,0,0" Grid.Row="1" VerticalAlignment="Top" Visibility="Hidden"/>




    </Grid>
</Window>
